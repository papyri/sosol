<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% Rails.logger.info("User from view: " + @user.inspect) %>
  <% Rails.logger.info("Resource from view: " + resource.inspect) %>
  <% Rails.logger.info("Resource name from view: " + resource_name.inspect) %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :name, value: resource.name %>
  </div>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, value: resource.full_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", value: resource.email %>
  </div>

  <% unless session['devise.google_data'].present? %>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
