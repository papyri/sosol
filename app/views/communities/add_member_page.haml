%header
  %h1
    = "Community Members for " +  @community.format_name
.sosolcard.no-bottom-margin
  %p
    = "These are users who are able to submit a publication to the " + @community.format_name
  %br

  - if @community

    %h2
      Existing Members
    %p
      click X by name to remove member
    %br
    - @community.members.each do |member|
      .remove_user
        .user_name
          = member.name
        = link_to "X", :controller => "communities", :action => "remove_member", :member_id => member.id
      %br

    %h2
      Potential Members

    %p
      click name to add member
    %br
    = render :partial => "user/select_user_by_name", :locals => { :li => LinkingInfo.new("communities", "add_member", @community.id ) }

%ul.menu
  %li
    = link_to 'Edit more', edit_community_path(@community), :class => 'btn bg-sdw'