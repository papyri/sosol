    color: #3D3D3D;
    font-size: .8em;
    padding: 7px 0 0 0;
    background: transparent;
}
#hd .bottom ul.radio a{
    font-size: .8em;
    color: #820003;
    text-decoration: none;
    letter-spacing: 1px;
}



