    float:left;
    margin-right:4px;
    overflow:hidden;  
}
#hd .bottom ul.radio li{
    text-align: center;
    float: left;
    margin-right: 2px;
    line-height: 1em; 
    padding:4px 6px 3px 6px;
    height: 21px;
}
