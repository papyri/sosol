// gray + 90: #dadada
$main_color: adjust(gray, $red: 90, $green: 90, $blue: 90)
$main_color_fade: adjust($main_color, $red: 16, $green: 16, $blue: 16)
$main_color_fade_medium: adjust($main_color, $red: 20, $green: 20, $blue: 20)
$main_color_fade_full: adjust($main_color, $red: 26, $green: 26, $blue: 26)
$main_color_fade_max: adjust($main_color, $red: 37, $green: 37, $blue: 37)
$main_color_darken: adjust($main_color, $red: -10, $green: -10, $blue: -10)
$main_color_darken_medium: adjust($main_color, $red: -31, $green: -31, $blue: -31)
$main_color_darken_full: adjust($main_color, $red: -67, $green: -67, $blue: -67)
$pn_color: #3C2217
