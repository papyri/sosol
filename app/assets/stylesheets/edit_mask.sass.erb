/**** general ****/

div.clear
  float: none
  clear: both
  display: block

input[type=checkbox]
  border: none

/**** action links ****/

.expandAll,
.collapseAll,
.quickSave
  cursor: pointer
  cursor: hand
  color: #c0c0c0
  text-decoration: underline
  margin: 0 0.8em 0 0

/**** quickhelp ****/

span.quickHelp
  position: relative
  z-index: 100
  float: left
  margin: 0 0 0 0.4em
  height: 1.6em

span.quickHelp span.hook
  position: relative
  background-color: lightsteelblue
  padding: 0.1em
  font-weight: bold
  color: white
  cursor: pointer

span.quickHelp span.message
  position: absolute
  left: 1.6em
  bottom: 0.8em
  background-color: lightgrey
  color: steelblue
  border: solid 0.1em steelblue
  padding: 0.4em
  width: 16em
  font-variant: normal
  font-weight: normal


/**** autocompleter ****/

div#edit div.multi ul.autocompleter_list
  border: solid 0.1em #c0c0c0
  background-color: white

div#edit div.multi ul.autocompleter_list li
  margin: 0 0.4em 0 0.4em
  width: auto
  height: auto
  list-style-type: none
  background-color: white

div#edit div.multi ul.autocompleter_list li.selected
  background-color: lightsteelblue

/**** multi general ****/

div#edit div.multi ul li
  background-color: lightsteelblue
  list-style-type: none
  display: block
  width: 40em
  padding: 1px
  margin: 0 0.4em 0.4em 0
  height: 16px

div#edit div.multi ul li.label
  background-color: transparent

div#edit div.multi ul.items li input
  margin: auto
  border: none
  height: 16px

div#edit div.multi ul.items li span
  width: 1.6em
  overflow: hidden
  background-color: lightsteelblue
  color: white
  font-weight: bold
  text-align: center
  padding: 0 0.3em 0 0.3em
  cursor: move

div#edit div.multi ul.items li span.delete
  cursor: pointer

div#edit div.multi p.add,
div#edit div.multi div.add
  clear: both
  background-color: lightsteelblue
  vertical-align: center
  padding: 1px
  height: 16px
  width: 40em

div#edit div.multi p.add input,
div#edit div.multi div.add input
  width: 44em
  height: 16px
  background-color: white
  border: none
  margin: auto

div#edit div.multi p.add span,
div#edit div.multi div.add span
  width: 1.6em
  height: 1.6em
  padding: 0 0.4em 0 0.4em
  margin-top: 0.2em
  background-color: lightsteelblue
  color: white
  font-weight: bold
  text-align: center
  cursor: pointer

/**** global ****/

div#edit h5
  margin: 0.4em 0 0
  padding: 0.4em
  font-weight: bold
  font-size: 10pt
  font-variant: small-caps
  position: relative

div#edit h4
  background: url("<%= asset_path("menu_strip_down_arrow.png") %>") no-repeat scroll right top #C0C0C0
  border-bottom: 0.1em solid #A0A0A0
  border-top: 0.1em solid #000000
  cursor: pointer
  margin: 0.4em 0 0
  padding: 0.4em
  font-weight: bold
  font-variant: small-caps
  background-color: lightgrey
  
div#edit div.editbox
  border-right: 0.1em solid #A0A0A0
  border-bottom: 0.1em solid #A0A0A0
  border-left: 0.1em solid #A0A0A0
  padding: 0.4em
  height: auto
  overflow: visible

div#edit div.editbox label
  font-weight: bold
  float: left
  margin: 0 0.4em 0 0.4em
  width: 7.5em
  overflow: hidden
  line-height: 1.077em

div#edit textarea
  width: 40em
  height: 6em
  border: solid 0.1em #c0c0c0
  float: left
  margin: 0 0 0.4em 0

div#edit div.multi
  width: 36em
  float: left
  margin: 0 0 1.6em 0 

div#edit input,
div#edit select
  width: 10.3em
  float: left
  margin: 0 0 0.4em 0

div#edit input
  border: solid 0.1em #c0c0c0

/**** flash hack ****/

#notice_expansionSet
  display: none
  width: 0
  height: 0
  position: absolute
  left: -1000px
  top: -1000px
